extends ../layouts/default.pug

block vars
  - var activePage = "introduce"

block headLinks
  link(rel="stylesheet" href="assets/css/products-cordydew.css")
  link(rel="stylesheet" href="assets/css/introduce.css")

block content
  // Banner
  section.banner-section.pt-200.pb-175.cd-hero
    .container
      .row
        .col-lg-12
          .page-title.text-center
            h1 Giới thiệu CordyDew & Sản phẩm
            p.cd-page-sub.text-white
              | CordyDew tập trung trải nghiệm người dùng trẻ:
              b  ngon – tiện – dễ duy trì mỗi ngày
              | .
              |  Khám phá CordyDew là gì, điểm khác biệt và 2 dòng sản phẩm chủ đạo.

  // ABOUT / INTRO
  section#cd-about.cd-intro.pt-80.pb-60
    .container
      .row.justify-content-center
        .col-lg-10.text-center
          .cd-section-title
            h2 CordyDew là gì và khác gì?
            p
              | CordyDew là
              b  thạch sữa chua probiotics sáng tạo
              | , được phát triển nhằm hỗ trợ tiêu hóa và cân bằng hệ vi sinh đường ruột theo cách
              b  tiện lợi – dễ sử dụng – phù hợp lối sống hiện đại
              | .
              |  Khác với sữa chua truyền thống, CordyDew được thiết kế
              b  dưới dạng thạch
              | :
              b  dễ ăn, dễ mang theo
              |  và phù hợp sử dụng hằng ngày.

      // Vertical cards
      .row.mt-35
        .col-lg-4.mb-25
          .cd-vcard
            .cd-vcard-media
              .cd-vcard-imgholder
                span Ảnh minh hoạ
            .cd-vcard-body
              h5 Giải pháp hỗ trợ tiêu hoá mỗi ngày
              ul.cd-ul
                li Hỗ trợ tiêu hoá và cân bằng lợi khuẩn đường ruột
                li Bổ sung chất xơ và dưỡng chất tự nhiên
                li Trải nghiệm sử dụng mới mẻ, tiện lợi

        .col-lg-4.mb-25
          .cd-vcard
            .cd-vcard-media
              .cd-vcard-imgholder
                span Ảnh minh hoạ
            .cd-vcard-body
              h5 Điểm khác biệt của CordyDew
              ul.cd-ul
                li Dạng thạch probiotics: dễ ăn, dễ mang theo
                li
                  b Synbiotics
                  | : kết hợp probiotics – prebiotics – dược liệu
                li Nguyên liệu tự nhiên ít phổ biến trong sản phẩm thương mại
                li Hợp người trẻ & người quan tâm sức khoẻ tiêu hoá

        .col-lg-4.mb-25
          .cd-vcard
            .cd-vcard-media
              .cd-vcard-imgholder
                span Ảnh minh hoạ
            .cd-vcard-body
              h5 Ai nên sử dụng CordyDew?
              ul.cd-ul
                li Người quan tâm sức khoẻ đường ruột
                li Người bận rộn cần sản phẩm tiện lợi
                li Người muốn trải nghiệm probiotics theo cách mới

      // Intro CTA
      .row.justify-content-center.mt-20
        .col-lg-10
          .cd-intro-cta
            div
              h4.mb-5.text-white Trải nghiệm giải pháp hỗ trợ tiêu hóa tiện lợi cùng CordyDew.
              p.mb-0 Chọn sản phẩm phù hợp hoặc kết nối để nhận tư vấn / mẫu thử / hợp tác.
            .cd-intro-cta-actions
              a.btn-bg.pd-btn(href="#cd-products")
                | Xem sản phẩm
                i.fa.fa-arrow-right
              a.cd-ghost-btn(href="contact.html") Liên hệ hợp tác

  // PRODUCTS
  section#cd-products.cd-products.pt-40.pb-30
    .container
      .row.justify-content-center
        .col-lg-10.text-center
          .cd-section-title
            h2 Sản phẩm (Products)
            p Mục tiêu: chứng minh có sản phẩm thật – sẵn sàng phát triển.

  // Product 1
  section.pd-product-block.pb-70.cd-product
    .container
      .row.align-items-center
        .col-lg-6.mb-30
          .pd-visual
            img.img-product(src="assets/img/products/1-5.png" alt="Thạch probiotics CordyDew")
            .pd-blob
            .pd-dots
            span.pd-chip Thạch probiotics

        .col-lg-6.mb-30
          .pd-card.pd-soft
            span.pd-badge CordyDew
            h3.pd-title Thạch probiotics CordyDew
            p.pd-desc
              b Thạch sữa chua probiotics tiện lợi mỗi ngày.
              br
              | CordyDew là thạch sữa chua probiotics kết hợp
              b  lợi khuẩn sống
              | ,
              b  khoai lang tím
              |  và
              b  đông trùng hạ thảo
              | , mang đến giải pháp hỗ trợ tiêu hóa theo cách nhẹ nhàng, dễ sử dụng và phù hợp với lối sống hiện đại.

            .pd-split
              .pd-split-col
                h6.pd-subtitle Lợi ích nổi bật
                ul.cd-ul
                  li Hỗ trợ cân bằng hệ vi sinh đường ruột
                  li Bổ sung chất xơ tự nhiên từ khoai lang tím
                  li Gia tăng giá trị dinh dưỡng nhờ đông trùng hạ thảo
                  li Dạng thạch mềm, dễ ăn, tiện mang theo
                p.pd-fit
                  b Phù hợp cho:
                  |  người quan tâm sức khỏe tiêu hóa, người bận rộn, người trẻ yêu thích sự tiện lợi.

              .pd-split-col
                h6.pd-subtitle Thành phần chính
                .pd-ingredients
                  .pd-ing
                    .pd-ing-title Lợi khuẩn probiotics
                    .pd-ing-text
                      | Streptococcus thermophilus • Lactobacillus acidophilus
                      br
                      | Hàm lượng duy trì
                      b  ≥10⁶ CFU/mL
                      | , hỗ trợ tiêu hóa hiệu quả
                  .pd-ing
                    .pd-ing-title Khoai lang tím
                    .pd-ing-text Giàu chất xơ tự nhiên • Góp phần nuôi dưỡng lợi khuẩn đường ruột
                  .pd-ing
                    .pd-ing-title Đông trùng hạ thảo
                    .pd-ing-text Bổ sung dưỡng chất sinh học • Gia tăng giá trị chức năng cho sản phẩm

            .pd-cta.mt-25
              a.btn-bg.pd-btn(href="contact.html")
                | Nhận tư vấn / mẫu thử
                i.fa.fa-arrow-right

  // Product 2
  section.pd-product-block.pb-90.cd-product
    .container
      .row.align-items-center
        .col-lg-6.mb-30.order-lg-2
          .pd-visual.pd-visual-alt
            img.img-product(src="assets/img/products/1-4.png" alt="Sữa chua sấy YoZen")
            .pd-blob
            .pd-dots
            span.pd-chip Snack sấy thăng hoa

        .col-lg-6.mb-30.order-lg-1
          .pd-card
            span.pd-badge.pd-badge-2 YoZen
            h3.pd-title Sữa chua sấy YoZen
            p.pd-desc
              b Snack sữa chua probiotics giòn xốp.
              br
              | YoZen là sản phẩm sữa chua
              b  sấy thăng hoa
              | , kết hợp probiotics, khoai lang tím và đông trùng hạ thảo,
              | giúp giữ trọn hương vị và giá trị dinh dưỡng, đồng thời mang đến trải nghiệm mới mẻ cho người dùng.

            .pd-feature-list
              .pd-feature
                .pd-ic
                  i.fa.fa-balance-scale
                div
                  h6 Hỗ trợ cân bằng hệ vi sinh đường ruột
                  p Probiotics phù hợp người thích snack nhưng vẫn muốn “healthy”.
              .pd-feature
                .pd-ic
                  i.fa.fa-leaf
                div
                  h6 Bổ sung chất xơ & dưỡng chất tự nhiên
                  p Khoai lang tím và dược liệu giúp tăng giá trị dinh dưỡng.
              .pd-feature
                .pd-ic
                  i.fa.fa-archive
                div
                  h6 Dạng khô giòn, tiện bảo quản – dễ sử dụng
                  p Phù hợp mang theo: học tập, làm việc, du lịch.
              .pd-feature
                .pd-ic
                  i.fa.fa-star
                div
                  h6 Trải nghiệm snack dinh dưỡng hằng ngày
                  p Giòn xốp – ngon miệng – dễ duy trì thói quen.

            p.pd-fit.mt-10
              b Phù hợp cho:
              |  người bận rộn, học sinh – sinh viên, người thích snack lành mạnh.

            .pd-cta.mt-25
              a.btn-bg.pd-btn(href="contact.html")
                | Nhận tư vấn / hợp tác
                i.fa.fa-arrow-right

  // Bottom CTA
  section.pd-bottom.pt-70.pb-70
    .container
      .row.justify-content-center
        .col-lg-10
          .pd-bottom-card
            div
              h3 Chăm sóc hệ tiêu hóa mỗi ngày cùng CordyDew
              p.mb-0 Lựa chọn sản phẩm phù hợp hoặc kết nối để nhận thông tin chi tiết và lộ trình phát triển.
            .cd-hero-actions
              a.btn-bg.pd-btn(href="#cd-about")
                | Tìm hiểu CordyDew
                i.fa.fa-arrow-right
              a.pd-link(href="#cd-products") Xem sản phẩm

block pageScripts
  script(src="assets/js/introduce.js")
