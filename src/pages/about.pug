extends ../layouts/default.pug

block vars
  - var activePage = 'about'

block headLinks

  link(rel="stylesheet" href="assets/css/about-cordydew.css")

block content
  // BANNER
  section.banner-section.pt-200.pb-175
    .container
      .row
        .col-lg-12
          .page-title.text-center
            h1 Hành trình phát triển &amp; Giải thưởng
            p.cd-page-sub.text-white
              | CordyDew là hành trình của 
              b ý tưởng – thử nghiệm – đổi mới
              | , nơi sáng tạo được nuôi dưỡng bằng kiến thức
              |  và niềm tin vào giá trị bền vững cho cộng đồng.

  // ABOUT - CORDYDEW
  section.about-page-content.another-page.pt-90.pb-60.cd-about
    .container

      // Story / Hero intro
      .row.align-items-center.mb-60.cd-story
        .col-lg-6.mb-30
          .cd-story-card
            .cd-story-head
              span.cd-badge Câu chuyện CordyDew
              h3.cd-h3 Từ nông sản Việt đến giải pháp chăm sóc tiêu hóa hiện đại
              p.cd-story-lead.mb-0
                | CordyDew bắt đầu từ một câu hỏi rất giản dị:
                b  Liệu những nông sản quen thuộc, giàu giá trị nhưng chưa được khai thác đúng cách có thể trở thành
                |  một giải pháp chăm sóc sức khỏe hiện đại?

            // 3 insight blocks
            .cd-story-points
              .cd-point
                .cd-point-ic
                  i.fa.fa-search
                .cd-point-body
                  .cd-point-title Vấn đề thực tế
                  .cd-point-text
                    | Khoai lang tím giàu 
                    b chất xơ
                    |  và 
                    b chống oxy hóa
                    |  nhưng thường dư thừa,
                    |  khó tiêu thụ và chưa được ứng dụng hiệu quả.

              .cd-point
                .cd-point-ic
                  i.fa.fa-flask
                .cd-point-body
                  .cd-point-title Giải pháp
                  .cd-point-text
                    | Kết hợp 
                    b probiotics
                    |  hỗ trợ tiêu hóa cùng 
                    b khoai lang tím
                    | , bổ sung 
                    b đông trùng hạ thảo
                    |  để nâng cao giá trị chức năng.

              .cd-point
                .cd-point-ic
                  i.fa.fa-heart
                .cd-point-body
                  .cd-point-title Trải nghiệm & thói quen
                  .cd-point-text
                    | Hướng đến sản phẩm 
                    b tiện lợi – dễ sử dụng
                    | , phù hợp lối sống hiện đại,
                    |  giúp chăm sóc tiêu hóa 
                    b nhẹ nhàng mỗi ngày
                    | .

            // Quote
            .cd-quote.cd-story-quote.mt-20
              i.fa.fa-quote-left
              div
                .cd-quote-title Tinh thần dự án
                .cd-quote-text
                  | Sự giao thoa giữa 
                  b nông sản Việt
                  | , 
                  b khoa học vi sinh
                  |  và 
                  b tư duy đổi mới
                  |  — hướng đến một cách tiếp cận 
                  b bền vững
                  |  kết nối giá trị sức khỏe với giá trị nông nghiệp.

            // Mini stats / highlights
            .cd-story-highlights.mt-20
              .cd-hl
                .cd-hl-k Nền tảng
                .cd-hl-v Công nghệ sinh học
              .cd-hl
                .cd-hl-k Trọng tâm
                .cd-hl-v Tiêu hóa & lối sống
              .cd-hl
                .cd-hl-k Định hướng
                .cd-hl-v Bền vững

        // Visual
        .col-lg-6.mb-30
          .cd-hero-visual.cd-story-visual
            img(src="assets/img/about/about-content.png" alt="CordyDew - About")
            .cd-hero-bg
            .cd-hero-dots

            .cd-float-chip.chip-1
              i.fa.fa-leaf
              span Khoai lang tím
            .cd-float-chip.chip-2
              i.fa.fa-shield
              span Probiotics
            .cd-float-chip.chip-3
              i.fa.fa-star
              span Đông trùng hạ thảo

      // Journey Timeline
      .row.justify-content-center
        .col-lg-10
          .cd-block-title.mb-25
            h3 Hành trình phát triển
            p
              | Được xây dựng theo hướng 
              b thực nghiệm – cải tiến – hoàn thiện
              |  để định hình công thức, cấu trúc và giá trị ứng dụng.

          .cd-timeline
            .cd-tl-item
              .cd-tl-dot
                span 01
              .cd-tl-card
                h4 Khởi nguồn ý tưởng
                p.mb-0
                  | Gia tăng giá trị 
                  b khoai lang tím
                  |  và tạo giải pháp hỗ trợ tiêu hóa tiện lợi
                  |  cho lối sống hiện đại.

            .cd-tl-item
              .cd-tl-dot
                span 02
              .cd-tl-card
                h4 Kết hợp nguyên liệu
                p.mb-0
                  b Probiotics
                  |  được kết hợp cùng 
                  b khoai lang tím
                  |  và 
                  b đông trùng hạ thảo
                  |  nhằm mang lại lợi ích tiêu hóa tự nhiên.

            .cd-tl-item
              .cd-tl-dot
                span 03
              .cd-tl-card
                h4 Thiết kế trải nghiệm
                p.mb-0
                  | Phát triển thạch sữa chua 
                  b dễ ăn – tiện sử dụng
                  | , phù hợp duy trì thói quen
                  |  chăm sóc tiêu hóa hằng ngày.

            .cd-tl-item
              .cd-tl-dot
                span 04
              .cd-tl-card
                h4 Cải tiến liên tục
                p.mb-0
                  | Không ngừng điều chỉnh dựa trên 
                  b trải nghiệm
                  |  và 
                  b phản hồi thực tế
                  |  của người dùng để tối ưu chất lượng và cảm nhận.

            .cd-tl-item
              .cd-tl-dot
                span 05
              .cd-tl-card
                h4 Hoàn thiện sản phẩm
                p.mb-0
                  | Sẵn sàng đồng hành cùng người dùng
                  |  trong hành trình chăm sóc sức khỏe tiêu hóa 
                  b mỗi ngày
                  | .

      // Awards
      .row.justify-content-center.mt-60
        .col-lg-10
          .cd-block-title.mb-25
            h3 Cột mốc &amp; Thành tựu
            p
              | Những dấu mốc cho thấy CordyDew đang được hoàn thiện nghiêm túc theo hướng ứng dụng thực tế.

          .row
            .col-md-6.mb-30
              .cd-award
                .cd-award-icon
                  i.fa.fa-trophy
                .cd-award-body
                  h5 HUIT Startup
                  p.mb-0 Hoàn thiện định hướng sản phẩm, câu chuyện thương hiệu và mô hình phát triển.

            .col-md-6.mb-30
              .cd-award
                .cd-award-icon
                  i.fa.fa-rocket
                .cd-award-body
                  h5 SV-STARTUP (sắp diễn ra)
                  p.mb-0 Mục tiêu kết nối chuyên gia – nguồn lực – mở rộng tiềm năng phát triển tương lai.

      // Brand Direction
      .row.justify-content-center.mt-30
        .col-lg-10
          .cd-block-title.mb-25
            h3 Định hướng
            p Rõ ràng – nhất quán – tạo niềm tin trong từng trải nghiệm.

          .cd-arches
            // Message
            .cd-arch-card
              .cd-arch-top
                .cd-arch-icon
                  i.fa.fa-commenting
                .cd-arch-title Thông điệp
              .cd-arch-body
                .cd-arch-quote “Chăm sóc hệ tiêu hóa – Đơn giản, tiện lợi, sáng tạo.”
                p.mb-0
                  | CordyDew mang đến trải nghiệm probiotics mới mẻ, giúp bạn dễ dàng duy trì thói quen chăm sóc tiêu hóa mỗi ngày.

            // Vision
            .cd-arch-card
              .cd-arch-top
                .cd-arch-icon
                  i.fa.fa-eye
                .cd-arch-title Tầm nhìn
              .cd-arch-body
                p.mb-0
                  | Trở thành thương hiệu probiotics sáng tạo, kết hợp 
                  b dinh dưỡng – tiện lợi – trải nghiệm
                  | , hướng đến người tiêu dùng trẻ Việt Nam và mở rộng ra thị trường quốc tế.

            // Mission
            .cd-arch-card
              .cd-arch-top
                .cd-arch-icon
                  i.fa.fa-bullseye
                .cd-arch-title Sứ mệnh
              .cd-arch-body
                ul.cd-arch-list
                  li
                    | Phát triển sản phẩm probiotics 
                    b chất lượng – dễ dùng – ứng dụng cao
                    | .
                  li
                    | Liên tục cải tiến theo 
                    b thử nghiệm
                    |  và 
                    b trải nghiệm người dùng
                    | .
                  li
                    | Kết nối giá trị sức khỏe với tinh thần 
                    b đổi mới
                    |  và 
                    b bền vững
                    | .

            // Core values
            .cd-arch-card
              .cd-arch-top
                .cd-arch-icon
                  i.fa.fa-diamond
                .cd-arch-title Giá trị cốt lõi
              .cd-arch-body
                ul.cd-arch-values
                  li
                    b Đổi mới sáng tạo:
                    |  Không ngừng tìm kiếm cách tiếp cận mới cho sản phẩm probiotics.
                  li
                    b Chất lượng &amp; an toàn:
                    |  Ưu tiên lợi khuẩn sống và nguyên liệu chọn lọc.
                  li
                    b Tiện lợi &amp; gần gũi:
                    |  Phù hợp với nhịp sống hiện đại.
                  li
                    b Phát triển bền vững:
                    |  Tôn trọng tự nhiên và trách nhiệm xã hội.

  // TEAM
  section.our-team-section.pt-120.pb-100.bg-gray.cd-team
    .container
      .row.justify-content-center
        .col-lg-7.text-center
          .section-title
            h2 Đội ngũ cố vấn &amp; phát triển
            p
              | Hội tụ chuyên môn vi sinh – thị trường – R&amp;D để phát triển CordyDew
              |  theo hướng chất lượng và bền vững.

      .row
        .col-lg-12.team-slider.owl-carousel
          // Cố vấn chuyên môn
          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-luan
            .team-info
              .cd-tag.cd-tag--expert Cố vấn chuyên môn
              h5 ThS. Nguyễn Thành Luân
              h6 Giảng viên – Trường Đại học Công Thương TP. Hồ Chí Minh
              ul.cd-meta
                li
                  b Chuyên môn:
                  |  Vi sinh &amp; Sinh học phân tử

          // Cố vấn thị trường
          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-dieu
            .team-info
              .cd-tag.cd-tag--market Cố vấn thị trường
              h5 Ông Lê Xuân Diệu
              h6 Giám đốc – Công ty TNHH Nông nghiệp VACO (Vacofarm)
              ul.cd-meta
                li
                  b Lĩnh vực:
                  |  Nông nghiệp

          // R&D
          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-thao
            .team-info
              .cd-tag.cd-tag--rnd R&amp;D
              h5 Nguyễn Hồ Thiên Thảo
              h6 Trưởng nhóm – Nghiên cứu &amp; Phát triển
              ul.cd-meta
                li
                  b Trường:
                  |  Đại học Công Thương TP. Hồ Chí Minh
                li
                  b Khoa:
                  |  Sinh học &amp; Môi trường

          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-ngoc
            .team-info
              .cd-tag.cd-tag--biz Business
              h5 Nguyễn Thị Ngọc
              h6 Tài chính &amp; Mô hình kinh doanh
              ul.cd-meta
                li
                  b Trường:
                  |  Đại học Công Thương TP. Hồ Chí Minh
                li
                  b Khoa:
                  |  Sinh học &amp; Môi trường

          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-giang
            .team-info
              .cd-tag.cd-tag--mkt Marketing
              h5 Nguyễn Hương Giang
              h6 Marketing &amp; Phát triển thị trường
              ul.cd-meta
                li
                  b Trường:
                  |  Đại học Công Thương TP. Hồ Chí Minh
                li
                  b Khoa:
                  |  Sinh học &amp; Môi trường

          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-huy
            .team-info
              .cd-tag.cd-tag--sales Field
              h5 Cao Ngọc Lê Huy
              h6 Tiếp thị &amp; Khảo sát thị trường
              ul.cd-meta
                li
                  b Trường:
                  |  Đại học Công Thương TP. Hồ Chí Minh
                li
                  b Khoa:
                  |  Sinh học &amp; Môi trường

          .single-team-member.cd-member
            .team-thumb.cd-thumb.thumb-phat
            .team-info
              .cd-tag.cd-tag--digital Digital
              h5 Nguyễn Thành Phát
              h6 Truyền thông số
              ul.cd-meta
                li
                  b Trường:
                  |  Đại học Công Thương TP. Hồ Chí Minh
                li
                  b Khoa:
                  |  Sinh học &amp; Môi trường

block pageScripts

